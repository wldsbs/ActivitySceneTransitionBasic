<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_lineInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="text" />

    <RadioGroup
        android:id="@+id/rg_lines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@id/rb_bl"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_lineInfo">

        <RadioButton
            android:id="@+id/rb_bl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bottom_left"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_br"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bottom_right"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_tl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="top_left"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="top_right"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset"
            android:textSize="20sp" />
    </RadioGroup>

    <ImageView
        android:id="@+id/iv_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/guide" />

    <ImageView
        android:id="@+id/iv_move"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/guide" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <RadioGroup
        android:id="@+id/rg_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:checkedButton="@id/rb_bl"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_lineInfo">

        <RadioButton
            android:id="@+id/rb_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="red"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yellow"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blue"
            android:textSize="20sp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>